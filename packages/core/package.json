{
  "name": "@hexcore/core",
  "version": "0.2.1",
  "description": "Core to build hexagonal architecture designed apps",
  "author": "Mararok",
  "license": "MIT",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mararok/hexcore.git",
    "directory": "packages/core"
  },
  "publishConfig": {
    "access": "public"
  },
  "homepage": "https://github.com/mararok/hexcore.git",
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "lint": "eslint \"{src,test}/**/*.ts\" --fix",
    "test": "jest --runInBand",
    "test:clearCache": "jest --clearCache",
    "test:unit": "jest --runInBand --group=unit",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "prepublish": "yarn run build"
  },
  "dependencies": {
    "@nestjs/common": "^7.0.0",
    "@nestjs/config": "^0.6.3",
    "@nestjs/core": "^7.0.0",
    "@nestjs/cqrs": "^7.0.1",
    "@nestjs/platform-fastify": "^7.4.4",
    "@nestjs/swagger": "^4.6.1",
    "deep-equal": "^2.0.5",
    "eta": "^1.1.1",
    "fastest-validator": "^1.8.0",
    "fastify-cookie": "^4.1.0",
    "fastify-multipart": "^4.0.6",
    "fastify-swagger": "^3.4.0",
    "file-type": "^16.4.0",
    "lambda-log": "^3",
    "middie": "^5.2.0",
    "nanoid": "^3.1.23",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^6.0.0",
    "typescript-chained-error": "^1.6.0",
    "uuid": "^8.3.1"
  },
  "devDependencies": {
    "@nestjs/cli": "^7.0.0",
    "@nestjs/schematics": "^7.0.0",
    "@nestjs/testing": "^7.0.0",
    "@types/jest": "26.0",
    "@types/node": "^13.9.1",
    "@types/uuid": "^8.3.0",
    "jest": "^26.0",
    "jest-docblock": "^27.0.1",
    "jest-runner": "^27.0.4",
    "jest-runner-groups": "^2.0.1",
    "jest-ts-auto-mock": "^1.0.11",
    "prettier": "^1.19.1",
    "ts-auto-mock": "^1.5.7",
    "ts-jest": "26.1.0",
    "ts-loader": "^6.2.1",
    "ts-node": "^8.6.2",
    "tsconfig-paths": "^3.9.0",
    "ttypescript": "^1.5.12",
    "typescript": "^4.1.3"
  },
  "jest": {
    "runner": "groups",
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "moduleNameMapper": {
      "^@$": "<rootDir>/src",
      "^@/(.*)$": "<rootDir>/src/$1"
    },
    "testMatch": [
      "<rootDir>/test/unit/**/*.test.ts",
      "<rootDir>/test/integration/**/*.test.ts"
    ],
    "setupFiles": [
      "<rootDir>/test/config.ts"
    ],
    "coverageDirectory": "./test/coverage",
    "testEnvironment": "node",
    "globals": {
      "ts-jest": {
        "compiler": "ttypescript"
      }
    }
  },
  "bugs": {
    "url": "https://github.com/mararok/hexcore/issues"
  },
  "directories": {
    "lib": "lib",
    "test": "test"
  }
}
