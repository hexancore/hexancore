{
  "name": "@hexcore/core",
  "version": "0.9.0",
  "engines": {
    "node": ">=14"
  },
  "engine-strict": true,
  "description": "Core to build hexagonal architecture designed apps",
  "author": "Mararok",
  "license": "MIT",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mararok/hexcore.git",
    "directory": "packages/core"
  },
  "publishConfig": {
    "access": "public"
  },
  "homepage": "https://github.com/mararok/hexcore.git",
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "lint": "eslint \"{src,test}/**/*.ts\" --fix",
    "test": "jest --runInBand",
    "test:clearCache": "jest --clearCache",
    "test:unit": "jest --runInBand --group=unit",
    "test:watch": "jest --runInBand --watchAll",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "prepublish": "yarn test && yarn run build"
  },
  "peerDependencies": {
    "//": "end common module deps",
    "@nestjs/bull": "^0.5.5",
    "@nestjs/common": "^8.4.5",
    "@nestjs/config": "^2.0.1",
    "@nestjs/core": "^8.4.5",
    "@nestjs/cqrs": "^8.0.4",
    "@nestjs/platform-fastify": "^8.4.5",
    "@nestjs/swagger": "^5.2.1",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.3.0"
  },
  "dependencies": {
    "@hexcore/common": "file:.yalc/@hexcore/common",
    "bull": "^4.8.4",
    "class-transformer": "^0.5.0",
    "class-validator": "^0.13.0",
    "deep-equal": "^2.0.5",
    "eta": "^1.12.3",
    "fastest-validator": "^1.11.1",
    "fastify": "^3.21.*",
    "fastify-cookie": "^5.3.1",
    "fastify-multipart": "^5.0.0",
    "fastify-swagger": "^4.12.1",
    "file-type": "^16.4.0",
    "fs-extra": "^10.1.0",
    "lambda-log": "^3",
    "middie": "^5.3.0",
    "nanoid": "^3.1.28",
    "typescript-chained-error": "^1.6.0",
    "uuid": "^8.3.1",
    "xss": "^1.0.10"
  },
  "devDependencies": {
    "//": "end optional module deps",
    "@hexcore/mocker": "^0.8.0",
    "@nestjs/bull": "^0.5.5",
    "@nestjs/cli": "8.1.6",
    "@nestjs/common": "^8.4.5",
    "@nestjs/config": "^2.0.1",
    "@nestjs/core": "^8.4.5",
    "@nestjs/cqrs": "^8.0.4",
    "@nestjs/platform-fastify": "^8.4.5",
    "@nestjs/swagger": "^5.2.1",
    "@types/bull": "^3.15.8",
    "@types/jest": "27.0.*",
    "@types/node": "^14.0",
    "@types/uuid": "^8.3.0",
    "@typescript-eslint/eslint-plugin": "^5.5.0",
    "@typescript-eslint/parser": "^5.5.0",
    "eslint": "^8.3.0",
    "jest": "27.0.*",
    "jest-docblock": "27.0.*",
    "jest-runner": "27.0.*",
    "jest-runner-groups": "^2.1.0",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.3.0",
    "ts-jest": "27.0.*",
    "typescript": "4.3.5"
  },
  "jest": {
    "preset": "ts-jest",
    "runner": "groups",
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "moduleNameMapper": {
      "^@$": "<rootDir>/src",
      "^@/(.*)$": "<rootDir>/src/$1"
    },
    "testMatch": [
      "<rootDir>/test/unit/**/*.test.ts",
      "<rootDir>/test/integration/**/*.test.ts"
    ],
    "setupFiles": [
      "<rootDir>/test/config.ts"
    ],
    "coverageDirectory": "./test/coverage",
    "testEnvironment": "node"
  },
  "bugs": {
    "url": "https://github.com/mararok/hexcore/issues"
  },
  "directories": {
    "lib": "lib",
    "test": "test"
  }
}
