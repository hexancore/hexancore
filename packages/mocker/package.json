{
  "name": "@hexcore/mocker",
  "version": "0.8.0",
  "keywords": [
    "mock",
    "typescript",
    "jest",
    "mockery",
    "automock",
    "test",
    "testing",
    "unit",
    "stub",
    "spy",
    "fake"
  ],
  "engines": {
    "node": ">=14"
  },
  "engine-strict": true,
  "description": "Simple and speed mock utils with typescript support",
  "author": "Mararok",
  "license": "MIT",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mararok/hexcore.git",
    "directory": "packages/mocker"
  },
  "publishConfig": {
    "access": "public"
  },
  "homepage": "https://github.com/mararok/hexcore.git",
  "scripts": {
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "lint": "eslint \"{src,test}/**/*.ts\" --fix",
    "test": "jest --runInBand",
    "test:clearCache": "jest --clearCache",
    "test:unit": "jest --runInBand --group=unit",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "build": "tsc --build tsconfig.build.json",
    "prepublish": "yarn run build"
  },
  "dependencies": {},
  "devDependencies": {
    "@types/jest": "27.0.*",
    "@types/node": "^14.*",
    "@typescript-eslint/eslint-plugin": "^5.5.0",
    "@typescript-eslint/parser": "^5.5.0",
    "eslint": "^8.3.0",
    "jest": "27.0.*",
    "jest-docblock": "27.0.*",
    "jest-runner": "27.0.*",
    "jest-runner-groups": "^2.1.0",
    "ts-jest": "27.0.*",
    "typescript": "4.3.5"
  },
  "jest": {
    "preset": "ts-jest",
    "runner": "groups",
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "moduleNameMapper": {
      "^@$": "<rootDir>/src",
      "^@/(.*)$": "<rootDir>/src/$1"
    },
    "testMatch": [
      "<rootDir>/test/unit/**/*.test.ts",
      "<rootDir>/test/integration/**/*.test.ts"
    ],
    "setupFiles": [
      "<rootDir>/test/config.ts"
    ],
    "coverageDirectory": "./test/coverage",
    "testEnvironment": "node"
  },
  "bugs": {
    "url": "https://github.com/mararok/hexcore/issues"
  },
  "directories": {
    "lib": "lib",
    "test": "test"
  }
}
