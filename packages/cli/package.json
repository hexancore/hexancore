{
  "name": "@hexcore/hcli",
  "version": "0.7.4",
  "description": "CLI to help build hexcore based apps",
  "author": "Mararok",
  "private": false,
  "license": "MIT",
  "main": "dist/index.js",
  "bin": "bin/hcli",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mararok/hexcore.git",
    "directory": "packages/cli"
  },
  "publishConfig": {
    "access": "public"
  },
  "homepage": "https://github.com/mararok/hexcore.git",
  "scripts": {
    "build": "tsc -p .",
    "global": "npm i -g --force",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "lint": "eslint \"{src,test}/**/*.ts\" --fix",
    "prepublish": "yarn run build"
  },
  "dependencies": {
    "@hexcore/core": "^0.*",
    "commander": "^6.2.0",
    "eta": "^1.1.1",
    "fs-extra": "^9.0.1",
    "inquirer": "^7.3.3",
    "inversify": "^5.0.1",
    "kleur": "^4.1.3",
    "reflect-metadata": "^0.1.13",
    "ts-morph": "^10.0.1"
  },
  "devDependencies": {
    "@types/figlet": "^1.2.1",
    "@types/fs-extra": "^9.0.4",
    "@types/jest": "27.0.*",
    "@types/node": "^14.*",
    "@typescript-eslint/eslint-plugin": "^5.5.0",
    "@typescript-eslint/parser": "^5.5.0",
    "eslint": "^8.3.0",
    "jest": "27.0.*",
    "jest-docblock": "27.0.*",
    "jest-runner": "27.0.*",
    "jest-runner-groups": "^2.1.0",
    "mock-fs": "^5.0.0",
    "rimraf": "^3.0.2",
    "ts-jest": "27.0.*",
    "typescript": "4.3.5"
  },
  "jest": {
    "preset": "ts-jest",
    "runner": "groups",
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "moduleNameMapper": {
      "^@$": "<rootDir>/src",
      "^@/(.*)$": "<rootDir>/src/$1"
    },
    "testMatch": [
      "<rootDir>/test/unit/**/*.test.ts",
      "<rootDir>/test/integration/**/*.test.ts"
    ],
    "setupFiles": [
      "<rootDir>/test/config.ts"
    ],
    "coverageDirectory": "./test/coverage",
    "testEnvironment": "node"
  }
}
