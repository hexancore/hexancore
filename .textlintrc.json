{
  "plugins": {
    "markdown": true
  },
  "rules": {
    "terminology": true,
    "spelling": {
      "language": "en",
      "skipPatterns": ["JavaScript"],
      "wordDefinitionRegexp": "/[\\w']+/g",
      "suggestCorrections": true
    },
    "write-good": {
      "severity": "warning",
      "passive": false,
      "adverb": false,
      "tooWordy": true,
      "cliches": true
    },
    "no-dead-link": {
      "checkRelative": true,
      "baseURI": "https://hexancore.github.io/hexancore/"
    }
  }
}
